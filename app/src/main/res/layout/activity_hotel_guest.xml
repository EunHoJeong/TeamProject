<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MotelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/backbutton" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:text="모텔"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="40dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/like_button" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFDEDE"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvRankName"
        android:layout_below="@id/imgRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="울산 진장동 보스턴"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgStar"
        android:layout_below="@id/tvRankName"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/star"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/tvGrade"
            android:layout_toRightOf="@id/imgStar"
            android:layout_alignBottom="@+id/imgStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvMaxGrade"
            android:layout_toRightOf="@id/tvGrade"
            android:layout_alignBottom="@+id/tvGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/5"/>

        <TextView
            android:id="@+id/tvReview"
            android:layout_alignBottom="@id/tvMaxGrade"
            android:layout_toRightOf="@id/tvMaxGrade"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기 N개"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <Button
            android:text="울산 KTX역까지 도보 3분"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            app:backgroundTint="#FFFFFF" />

        <Button

            android:text="전화하기"
            android:textColor="#000000"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            app:backgroundTint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="3월 26일(금)"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            app:backgroundTint="#FF5252" />

        <Button

            android:text="3월 27일(토)"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            app:backgroundTint="#FF5252" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="객실 선택하기"
            android:textColor="#000000"
            android:layout_margin="5dp"
            app:backgroundTint="#FF4081" />

    </LinearLayout>

</LinearLayout>